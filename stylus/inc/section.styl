	}
}

.section-order {
	padding 20px 0
	background-color $color-signal-black
	color white
	
	@media (min-width $sm) {
		padding 95px 0 50px	}
	
	@media (min-width $md) {
		background $color-signal-black url(../images/bg-order.jpg) 45% center / auto 100% no-repeat;
		
		&:before {
			content ""
			display block
			top 0
			left 0 
		}
	}
	
	&__title {
		margin-bottom 25px 
		
		@media (min-width $sm) {
			margin-bottom 90px 
		}
	}
	
	&__card {
		margin-bottom 25px 
		
		@media (min-width $sm) {
			margin-bottom 65px 
		}
		
		&:last-child {
			margin-bottom 0
		}
	}
	
	&__button {
		display block
		width 300px
	}
	
	&__popup {
		margin-top 100px 
	}
}

.section-foo {
	padding 35px 0
	
	&__container {
		@media (min-width $md) {
			display flex
			align-items flex-start
		}
	}
	
	&__column {
		margin-bottom 20px
		
		@media (min-width $md) {
			margin-right 25px
			margin-bottom 0
		}
		
		@media (min-width $lg) {
			margin-right 50px
		}
		
		&:last-child {
			margin-right 0
		}
		
		&_logo {
		}
		
		&_contact {
			@media (min-width $sm) {
				flex auto
				display flex
				align-items center
				justify-content space-between 
			}
		}
	}
	
	&__side {
		@media (min-width $sm) {
			margin-right 20px 
		}
		
		@media (min-width $lg) {
			margin-right 85px
		}
		
		&:last-child {
			margin-right 0
		}
		
		&_social {
			text-align left
			
			@media (min-width $sm) {
				flex auto
				text-align right
			}
			
			@media (min-width $lg) {
				display flex
				align-items center
				justify-content flex-end
			}
		}
	}
	
	&__logo {
		max-width 100% 
		height auto
	}
	
	&__title {
		margin 0
		font-size 18px 
		font-weight 400 
		line-height 30px 
	}
	
	&__contact {
		color #a7a9aa
		font-size 16px 
		line-height 30px
	}
	
	&__guu {
		display inline-block
		font-size 16px 
		line-height 30px
		margin-bottom 10px 
		
		@media (min-width $lg) {
			margin-right 30px
			margin-bottom 0
		}
	}
}