.section-header {
	position sticky
	top 0
	z-index 10
	background white
	width 100%
	box-shadow 0 3px 7px rgba(32, 31, 31, 0.35)
	
	&__container {
		display flex
		justify-content space-between
		align-items center
		padding 8px 0
	}
	
	&__column {
		margin-right 10px 
		
		&:last-child {
			margin-right 0
		}
		
		&_logo {
			margin-right auto
			
			@media (min-width $lg) {
				margin-right 0
				width 150px 
			}
		}
	}

	&__nav {
		padding 15px
		font-size 16px
		color $color-signal-black
		text-transform uppercase
		
		@media (min-width $lg) {
			padding 0
			font-size 14px
		}
	}
	
	&__burger {
		color $color-signal-black
		
		&:hover,
		&:focus,
		&:active {
			color $color-signal-black
			text-decoration none
		}
	}
	
	&__logo {
		max-width 100%
		height auto
	}
}

.section-main {
	position relative
	overflow hidden
	background-color $color-signal-black 
	color white
	padding 20px 0
	
	@media (min-width $md) {
		// min-height 1000px
		padding 100px 0
		
		background-image  
		background-repeat no-repeat
		// background-position left center, right center
		background-size auto 100%
		// background url(../images/bg-main-mask.png) center center / cover no-repeat,
							 // url(../images/bg-main.jpg) bottom center / cover no-repeat
	}
	
	&::before, &::after {
		content ""
		display block
		position absolute
	}
	
	&::before {
		display none
		top 0
		width 55% 
		height 100%		
		background url(../images/bg-main-mask.png) top right / cover no-repeat
		
		@media (min-width $md) {
			display block
		}
	}
	
	&::after {
		top 0
		left 50%
		height 100% 
		width 1920px
		background url(../images/bg-main-decor.png) bottom right no-repeat
		transform translate(-50%, 0)
	}

	// @media (min-width $md) {
	// 	min-height 1000px
	// 	padding 305px 0 0
	// 	background url(../images/bg-main.jpg) bottom center / cover
	// }
		
	&__container {
		z-index 5
		position relative
	}
	
	&__title {
		margin-bottom 20px
		
		@media (min-width $sm) {
			margin-bottom 40px
		}
	}	
	
	&__slogan {
		margin-bottom 20px
		
		@media (min-width $sm) {
			margin-bottom 64px 
		}
	}
	
	&__button {
		text-transform uppercase
		width 300px 
	}
	
	&__button {}
}

.section-history {
	position relative
	overflow hidden
	padding 25px 0
	
	&:before {
		content ""
		display block
		position absolute
		top 0
		left 50%
		width 1920px
		height 100%
		transform translate(-50%, 0)
		background #bad8e3
		clip-path polygon(69.01% 0, 100% 0, 100% 100%, 41.55% 100% )
		
		@media (min-width 1920px) {
			width 100%
			left 0
			transform none
		}
	}
	
	@media (min-width $sm) {
		padding 100px 0
	}
	
	&__title {
		margin-bottom 15px
		
		@media (min-width $sm) {
			margin-bottom 80px 
		}
	}
	
	&__desc {
		padding 10px 0 0
		
		@media (min-width $sm) {
			padding 50px 0 0
		}
	}
	
	&__button {
		width 300px
	}
}

.section-course {
	
	padding 25px 0
	
	
	@media (min-width $sm) {
		padding 200px 0 100px
		background url(../images/bg-course.jpg) top center no-repeat
	}
	
	@media (min-width 1920px) {
		background-size 100% auto
	}
	
	&__title {
		margin-bottom 25px
		
		@media (min-width $sm) {
			margin-bottom 150px 
		}
	}
	
	&__card {
		margin-bottom 55px
		
		&:last-child {
			margin-bottom 0
		}
	}
	
	&__button {
		display block
		width 420px
		margin 80px auto 0
	} 
}

.section-detail {
