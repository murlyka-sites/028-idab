.section-teacher {
	padding 25px 0 
	
	@media (min-width $sm) {
		padding 100px 0
	}
	
	&__container {
		font-size 0 
		
		@supports (flex-wrap: wrap) {
			display flex
			flex-wrap wrap
			align-items stretch
		}
	}
	
	&__title {
		margin-bottom 20px
		 
		@media (min-width $sm) {
			margin-bottom 80px 
		}
	}
	
	&__card {
		display inline-block
		vertical-align top
		width 100% 
		margin-bottom 40px 
		padding 0 14px 
		
		@media (min-width 600px) {
			width 50%
		}
		
		@media (min-width $md) {
			width 33.333% 
		}
		
